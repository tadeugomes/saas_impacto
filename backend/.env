# Environment Configuration - Development Local
# Criado automaticamente para desenvolvimento

# Application
APP_NAME=SaaS Impacto Portuário
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=dev-secret-key-local-only-change-in-production
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000","http://127.0.0.1:8000"]

# PostgreSQL (Operational DB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=saas_impacto
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=5

# BigQuery (Data Warehouse) - CREDENCIAIS NECESSÁRIAS
# Para rodar localmente, você precisa:
# 1. Ter uma service account JSON do GCP
# 2. Configurar o caminho abaixo
GOOGLE_APPLICATION_CREDENTIALS=/Users/tgt/Documents/GitHub/saas_impacto/venv/saasimpacto-7f2d36db4bca.json
GCP_PROJECT_ID=saasimpacto
BQ_LOCATION=US
BQ_DATASET_ANTAQ=antaqdados.br_antaq_estatistico_aquaviario
BQ_DATASET_MARTS=marts_impacto

# Redis (Cache & Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=dev-jwt-secret-key-local-only

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Storage (Relatórios)
STORAGE_BACKEND=gcs
GCS_BUCKET_NAME=saas-impacto-reports

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=saas-impacto-backend
OTEL_SAMPLING_RATIO=1.0

# Reports
QUARTO_PATH=/usr/bin/quarto
REPORTS_OUTPUT_PATH=/tmp/reports
