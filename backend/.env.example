# Application
APP_NAME=SaaS Impacto Portuário
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development  # development | staging | production
SECRET_KEY=change-me-production-secret-use-openssl-rand-hex-32
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# PostgreSQL (Operational DB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=saas_impacto
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# BigQuery (Data Warehouse)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-project-id
BQ_LOCATION=US  # ou southamerica-east1
BQ_DATASET_ANTAQ=antaqdados.br_antaq_estatistico_aquaviario
BQ_DATASET_MARTS=marts_impacto

# Redis (Cache & Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600  # segundos

# JWT Authentication
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=your-jwt-secret-key-change-me

# OAuth2 (Opcional - Google/Azure AD)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# S3/GCS (Relatórios)
STORAGE_BACKEND=gcs  # gcs | s3
GCS_BUCKET_NAME=saas-impacto-reports
GCS_PROJECT_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=saas-impacto-backend
OTEL_SAMPLING_RATIO=1.0

# Quarto Reports
QUARTO_PATH=/usr/bin/quarto
REPORTS_OUTPUT_PATH=/tmp/reports
